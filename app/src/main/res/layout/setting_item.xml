<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hostName"
        android:textSize="@dimen/menuTextSize"
        android:layout_margin="@dimen/editTextPading"
        android:gravity="center" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/editTextLayoutMargin"
        android:layout_marginRight="@dimen/editTextLayoutMargin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:inputType="text"
        android:layout_gravity="center"
        android:background="@drawable/text_edit"
        android:padding="@dimen/editTextPading"
        android:textSize="@dimen/editTextTextSize"
        android:selectAllOnFocus="true"
        android:focusable="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:background="@color/toolBarShadow"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

</LinearLayout>