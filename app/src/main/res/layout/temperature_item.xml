<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/temperatureItemMarginBottom"
        android:orientation="horizontal"
        android:background="@drawable/heating_item"
        android:padding="@dimen/editTextPading">

        <TextView
            android:id="@+id/number"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top|left"
            android:layout_marginTop="@dimen/temperatureNumberMarginTop"
            android:gravity="top|left"
            android:textSize="@dimen/prefixText"
            android:textColor="@color/toolBarShadow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:layout_marginRight="@dimen/vertical_margin"
            android:textSize="@dimen/editTextTextSize" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:layout_marginRight="@dimen/vertical_margin"
            android:textSize="@dimen/editTextTextSize"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/temperatureIcoSize"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
